function plot_particles(as,a,w)
% Plot the particles in state space when k=3 where size of particle is
% proportional to its weight
figure;


xlabel 'd_1'
ylabel 'd_2'
zlabel 'd_3'
scatter3(1,.1,.5,'*k','LineWidth',10)
scatter3(as(:,1),as(:,2),as(:,3),w*5000,'o')
xlim([.9,1.3]),ylim([0,0.4]),zlim([0.4,0.8])
xlabel('a_1');ylabel('a_2');zlabel('a_3');
box on;grid on;hold on;
plot3(a(1),a(2),a(3),'r*','linewidth',10)
